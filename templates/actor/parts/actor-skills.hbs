<ol class='items-list'>
	<li class='item flexrow items-header'>
		<div class='item-name'>{{localize 'Name'}}</div>
		<div class='skill-stats item-prop'>Base</div>
		<div class='skill-stats item-prop'>Coins</div>
		<div class='skill-stats item-prop'>Coin Value</div>
		<div class='item-controls'>
			<a
				class='item-control item-create'
				title='Create item'
				data-type='skill'
			>
				<i class='fas fa-plus'></i>
				{{localize 'DOCUMENT.New' type='skill'}}
			</a>
		</div>
	</li>
	{{#each skills as |item id|}}
		<li class='item flexrow' data-item-id='{{item._id}}'>
			<div class='item-name'>
				<div class='item-image'>
					<img
						src='{{item.img}}'
						title='{{item.name}}'
						width='24'
						height='24'
					/>
				</div>
				<h4>{{item.name}}</h4>
			</div>
			<div class='skill-stats item-prop'>{{item.system.base}}</div>
			<div class='skill-stats item-prop'>{{item.system.coins}}</div>
			<div class='skill-stats item-prop'>{{item.system.coin_power}}</div>
			<div class='item-controls'>
				<a class='rollable' data-roll-type='skill-check'>
					<img
						src='systems/foundry-quintessence-system/assets/dice.png'
						title='Skill Check'
						width='14'
						height='14'
					/>
				</a>
				<a class='rollable' data-roll-type='skill-damage'>
					<img
						src='systems/foundry-quintessence-system/assets/sword.png'
						title='Unopposed Damage'
						width='14'
						height='14'
					/>
				</a>
				<a
					class='item-control item-edit'
					title='{{localize "DOCUMENT.Edit" type='skill'}}'
				>
					<i class='fas fa-edit'></i>
				</a>
				<a
					class='item-control item-delete'
					title='{{localize "DOCUMENT.Delete" type='skill'}}'
				>
					<i class='fas fa-trash'></i>
				</a>
			</div>
		</li>
	{{/each}}
</ol>
